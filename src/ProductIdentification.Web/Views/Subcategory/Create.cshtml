@model ProductIdentification.Web.Models.SubCategoryCreateModel

@{
    ViewData["Title"] = "Create Subcategory";
}

<h1>Create</h1>

<h4>SubCategoryNameViewModel</h4>

@if (ViewData["Error"] != null)
{
    <p>@ViewData["Error"]</p>
}

<hr/>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control"/>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                @Html.DropDownListFor(x => x.CategoryName, new SelectList(Model.CategoriesNames), "Select category")
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary"/>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}