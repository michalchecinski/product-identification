@using ProductIdentification.Core.Models.Roles
@model ProductIdentification.Core.Dto.ProductDto

@{
    ViewData["Title"] = "Details";
}

<h2> @Model.Category / @Model.SubCategory / @Model.Name</h2>

<h1>Details</h1>

<div>
    <h4>Product: @Model.Name</h4>
    <hr/>
    <div class="row">
        <div class="col-6">
            <dl class="row">
                <dt class="col-sm-2">
                    Product Name
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Name)
                </dd>
                <dt class="col-sm-2">
                    Net Price
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.NetPrice)
                </dd>
                <dt class="col-sm-2">
                    Gross Price
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.GrossPrice)
                </dd>
                <dt class="col-sm-2">
                    Category
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Category)
                </dd>
                <dt class="col-sm-2">
                    SubCategory
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.SubCategory)
                </dd>
            </dl>
        </div>
        <div class="col-6">
            <img src="@Model.Photo" className="img" alt="Photo of @Model.Name"/>
        </div>
    </div>
</div>

@if (User.IsInRole(Role.Admin) || User.IsInRole(Role.WarehouseMan))
{
    <div>
        @Html.ActionLink("Edit", "Edit", new {id = Model.Id}, new {@class = "btn btn-info"})
    </div>
}

@if (User.IsInRole(Role.Admin) || User.IsInRole(Role.DataManager))
{
    <div>
        @Html.ActionLink("Review product photos", "Product", "ReviewPhotos", new {id = Model.Id}, new {@class = "btn btn-primary"})
    </div>
}